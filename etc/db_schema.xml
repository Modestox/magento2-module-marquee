<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/db_schema.xsd">
    <table name="modestox_marquee" resource="default" engine="innodb" comment="Modestox Marquee Table">
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="true" comment="Entity ID"/>
        <column xsi:type="varchar" name="name" nullable="false" length="255" comment="Admin Name"/>
        <column xsi:type="text" name="content" nullable="false" comment="Message Content"/>
        <column xsi:type="smallint" name="is_active" unsigned="true" nullable="false" default="1" comment="Is Active"/>
        <column xsi:type="timestamp" name="start_time" nullable="true" comment="Start Time"/>
        <column xsi:type="timestamp" name="end_time" nullable="true" comment="End Time"/>
        <column xsi:type="varchar" name="bg_color" nullable="true" length="7" default="#000000" comment="Background Color"/>
        <column xsi:type="varchar" name="text_color" nullable="true" length="7" default="#ffffff" comment="Text Color"/>
        <column xsi:type="varchar" name="speed" nullable="false" length="20" default="medium" comment="Scroll Speed"/>
        <column xsi:type="varchar" name="display_mode" nullable="false" length="50" comment="Display Mode"/>
        <column xsi:type="smallint" name="store_id" unsigned="true" nullable="false" default="0" comment="Store ID"/>
        <column xsi:type="varchar" name="height" nullable="true" length="10" comment="Marquee Height (px or %)"/>
        <column xsi:type="smallint" name="sort_order" padding="5" unsigned="true" nullable="false" default="0" comment="Display Order"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>

        <index referenceId="MODESTOX_MARQUEE_IS_ACTIVE_START_END" indexType="btree">
            <column name="is_active"/>
            <column name="start_time"/>
            <column name="end_time"/>
        </index>

        <index referenceId="MODESTOX_MARQUEE_STORE_ID" indexType="btree">
            <column name="store_id"/>
        </index>
    </table>
</schema>
